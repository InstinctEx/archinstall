{
  "name": "archinstall",
  "version": "1.0.80",
  "license": "CC-BY-3.0",
  "description": "automate your installation process",
  "homepage": "http://torben.website/archInstall",
  "documentationWebsite": {
    "languages": [
      "enUS",
      "deDE"
    ],
    "name": "archInstall",
    "tagline": "automate your installation process<!--deDE:Automatisiere deinen Installationsprozess-->",
    "trackingCode": "UA-40192634-12"
  },
  "keywords": [
    "archLinux",
    "arch",
    "linux",
    "install",
    "automatism",
    "automatic"
  ],
  "files": [
    "packIntoArchiso.sh"
  ],
  "main": "archInstall.sh",
  "bin": {
    "arch-install": "archInstall.sh",
    "pack-into-archiso": "packIntoArchiso.sh"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thaibault/archInstall"
  },
  "scripts": {
    "clear": "rm --recursive apiDocumentation &>/dev/null || true",
    "document": "mkdir --parents apiDocumentation/archInstall/latest && npm run document:show 1>apiDocumentation/archInstall/latest/index.html",
    "document:show": "bashlink-document ../../archInstall",
    "document:show:error": "bashlink-document archInstall 1>/dev/null",
    "lint": "hash shellcheck && shellcheck -x *.sh || echo Please install \"shellcheck\". || true",
    "lint:given": "shellcheck -x",
    "test": "bashlink-doctest --verbose ../../archInstall; bashlink-doctest --verbose ../../packIntoArchiso",
    "update": "npm version patch && npm publish",
    "update:documentation": "documentationWebsite --log-level info"
  },
  "devDependencies": {
    "documentation-website": "^1.0.119",
    "shellcheck": "0.0.8"
  },
  "dependencies": {
    "bashlink": "^1.0.95"
  }
}
